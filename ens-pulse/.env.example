# ENS Pulse Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# API Keys (Required for full functionality)
# ===========================================

# Dune Analytics API Key
# Get one at: https://dune.com/settings/api
DUNE_API_KEY=

# Safe Global API Key (optional, increases rate limits)
# Register at: https://docs.safe.global
SAFE_API_KEY=

# CoinGecko API Key (optional, increases rate limits)
# Get one at: https://www.coingecko.com/en/api
COINGECKO_API_KEY=

# Etherscan API Key (for gas prices)
# Get one at: https://etherscan.io/apis
ETHERSCAN_API_KEY=

# ===========================================
# Blockchain RPC
# ===========================================

# Alchemy API Key for Ethereum mainnet (server-side only)
# Get one at: https://www.alchemy.com
ALCHEMY_API_KEY=

# Alternative: Use any Ethereum RPC URL
PONDER_RPC_URL_1=https://eth.llamarpc.com

# ===========================================
# Google Calendar (for WG Meetings)
# ===========================================

# ENS DAO Unified Calendar ID (all working groups)
# This is the official ENS DAO calendar - already configured as default
# Uses public ICS feed - no authentication required!
ENS_DAO_CALENDAR_ID=8im77u2b3euav0qjc067qb00ic@group.calendar.google.com

# ===========================================
# Ponder Indexer
# ===========================================

# Ponder REST API URL (defaults to local development)
# Run `pnpm indexer dev` to start the indexer on this URL
PONDER_URL=http://localhost:42069

# ===========================================
# ENS Node (Protocol Health)
# ===========================================

# ENS Node API URL (defaults to public instance)
# Self-host: https://ensnode.io/docs/deploying/
ENSNODE_API_URL=https://api.ensnode.io

# ===========================================
# Database (for Ponder indexer)
# ===========================================

# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/ens_pulse

# ===========================================
# Frontend (Next.js)
# ===========================================

# WalletConnect Project ID (for wallet connections)
# Get one at: https://cloud.walletconnect.com
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=

# ===========================================
# Deployment
# ===========================================

# Vercel deployment settings (optional)
VERCEL_URL=
VERCEL_ENV=development
